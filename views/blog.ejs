<% include ./partials/header %>

<div class="bgDiv solidBgDivLast">
	<div class="container">
		<div class="row">
			<div class="col col-12">
				<h2>Blog</h2>
			</div>
		</div>

		<div class="row">

			<% blogPosts.docs.forEach(function(blogPost) { %>
				<div class="col col-12 blogThumb">
					<div class="truncatedBlogContent">
						<a href="/blog/<%= blogPost._id %>" class="thumbLink blogTitle">
							<h3><%= blogPost.title %></h3>
						</a>
						<span class="dateSpan"><%= blogPost.dateDisplay %></span>
						<%- blogPost.content %>								<!-- note that EJS hyphen tag notation evaluates & renders HTML tags from string -->
					</div>
				</div>
			<% }); %>

		</div>
	</div>
</div>


<% include ./partials/footer %>

